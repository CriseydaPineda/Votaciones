@model Votacion.Models.AddMemberView

@{
    ViewBag.Title = "AddMemmber";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Agregar Miembro</h4>
        <h3>@ViewBag.Error</h3>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id_Group)



        <div class="form-group">
            @Html.LabelFor(model => model.UserId, "Usuario",new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("UserId", "[Seleccione  un usuario...]")
                @Html.ValidationMessageFor(model => model.UserId,"", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                System.InvalidOperationException: 'The ViewData item that has the key 'UserId' is of type 'System.Int32' but must be of type 'IEnumerable<SelectListItem>
                    '.'
                    <input type="submit" value="Agregar Miembro" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", new { }, new { @class = "btn btn-success" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}